<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/coordinate_fragment_layout"
    android:focusable="false" android:rowCount="3" android:columnCount="3">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/x"
        android:id="@+id/textView"
        android:layout_column="1" android:layout_row="0"/>
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="8"
        android:id="@+id/txtX"
        android:ellipsize="middle"
        android:editable="false"
        android:clickable="false"
        android:focusable="false"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/y"
        android:id="@+id/textView2"
        android:layout_column="1"
        android:singleLine="false" android:layout_row="1"/>
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="8"
        android:id="@+id/txtY"
        android:editable="false"
        android:clickable="false"
        android:focusable="false" android:ellipsize="middle"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/z"
        android:id="@+id/textView3"
        android:layout_column="1"
        android:singleLine="false" android:layout_row="2"/>
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="8"
        android:id="@+id/txtZ"
        android:editable="false"
        android:clickable="false"
        android:focusable="false" android:ellipsize="middle"/>
</GridLayout>