<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme.MyActionBar"
    android:textSize="6sp"
    tools:context=".MainActivity"
    android:rowCount="3"
    android:columnCount="1">
    <!-- should be avoided: android:configChanges="orientation|screenSize"-->
    <fragment android:name="de.hsmainz.gi.indoornavcl.StartButtonFragment"
              android:id="@+id/startbutton_fragment"
              android:layout_weight="1"
              android:layout_width="match_parent"
              android:layout_height="40dp"
              tools:layout="@layout/startbutton_fragment"
              android:layout_column="0"
              android:layout_columnSpan="1"
              android:layout_row="0"/>
    <fragment android:name="de.hsmainz.gi.indoornavcl.MapFragment"
              android:id="@+id/map_fragment"
              android:layout_weight="1"
              android:layout_width="match_parent"
              android:layout_height="400dp"
              tools:layout="@layout/map_fragment"
              android:layout_column="0"
              android:layout_columnSpan="1"
              android:layout_row="1"/>
    <fragment android:name="de.hsmainz.gi.indoornavcl.CoordinateFragment"
              android:id="@+id/coordinate_fragment"
              android:layout_weight="1"
              android:layout_width="match_parent"
              android:layout_height="fill_parent"
              tools:layout="@layout/coordinate_fragment"
              android:layout_column="0"
              android:layout_columnSpan="1"
              android:layout_row="2"/>
</GridLayout>

